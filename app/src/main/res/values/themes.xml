<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="SimpillAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="statusBarBackground">@color/pink</item>
        <item name="statusBarForeground">@color/pink</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/pink</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/pink</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">#009FFD</item>
        <item name="android:textColor">@color/alice_blue</item>
        <item name="android:fillViewport">true</item>
        <item name="android:textColorPrimary">@color/alice_blue</item>
    </style>
    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/blue_magenta</item>
        <item name="android:colorForeground">#54f0f8ff</item>
        <item name="colorSwitchThumbNormal">@color/alice_blue</item>
    </style>

    <style name="DateTimePickerTheme" parent="Theme.Design.NoActionBar">
    </style>

    <style name="SimpillToolbarTheme" parent="Theme.Design.NoActionBar">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/blue_magenta</item>
    </style>

</resources>
