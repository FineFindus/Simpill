<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pillLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.25"
        android:src="@drawable/pill_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/pillBottleImage"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:contentDescription="@string/pill_bottle_content_description"
        android:scaleX="1"
        android:scaleY="1.1"
        app:layout_constraintBottom_toBottomOf="@id/bottom_horizontal_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal_guideline"
        app:srcCompat="@drawable/pill_bottle_color_2" />

    <Button
        android:id="@+id/bigButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/pillBottleImage"
        app:layout_constraintEnd_toStartOf="@id/mid_vertical_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/pillName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        android:gravity="top"
        android:text="Fluoxetine Hydrochloride"
        android:textColor="@color/alice_blue"
        android:textSize="28sp"
        android:verticalScrollbarPosition="right"
        app:layout_constraintEnd_toStartOf="@+id/mid_vertical_guideline"
        app:layout_constraintStart_toEndOf="@+id/pillBottleImage"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal_guideline"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/pillTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="Take at 09:00"
        android:textSize="15sp"
        android:textColor="@color/alice_blue"
        android:alpha="0.75"
        app:layout_constraintBottom_toBottomOf="@+id/pillBottleImage"
        app:layout_constraintEnd_toStartOf="@+id/mid_vertical_guideline"
        app:layout_constraintStart_toEndOf="@+id/pillBottleImage"
        app:layout_constraintTop_toBottomOf="@id/pillName" />

    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/reset_pill_content_description"
        android:scaleX="1.1"
        android:scaleY="1.2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_horizontal_guideline"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal_guideline"
        app:srcCompat="@drawable/ic_reset" />

    <ImageButton
        android:id="@+id/tickButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/take_pill_content_description"
        android:scaleX="1.1"
        android:scaleY="1.2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_horizontal_guideline"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal_guideline"
        app:srcCompat="@drawable/ic_check_tick_svgrepo_com" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mid_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.925" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>
